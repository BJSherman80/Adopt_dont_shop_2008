<div class="pageheader">
  <h1>Pets</h1>
</div>
<div class="row">
<% @pets.each do |pet| %>
  <div class="column">
    <img src="<%= pet.image %>" alt="<%= pet.name %>" height="180">
    <h4>Name: <a href="/pets/<%= pet.id %>"><%= pet.name %></a></h4>
    <p>Located at: <a href="/shelters/<%= pet.shelter.id %>"><%= pet.shelter.name %></a></p>
    <p> Age: <%= pet.age%></p>
    <p>Sex: <%= pet.sex%></p>
    <h5><a href="/pets/<%= pet.id %>/edit">Edit</a></h5>
    <h5><a href="/pets/<%= pet.id %>/delete">Delete</a></h5>
  </div>
<% end %>
</div>
