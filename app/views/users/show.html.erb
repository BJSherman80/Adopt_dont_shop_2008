
<div class="show">
<h2><%= @user.name %></h2>
<p><%= @user.address %></p>
<p><%= @user.city %></p>
<p><%= @user.state %></p>
<p><%= @user.zip %></p>
</div>
<section class="show">
  <h2>All Reviews</h2>
  <% @user.reviews.each do |review| %>
  <p>Title: <%= review.title %></p>
  <p>Review out of 5: <%= review.rating %></p>
  <p>Content: <%= review.content %></p>
  <% end %>
</section>
<section id="av_user_rating">
  <h2>User's Average Review Rating</h2>
  <p>Average: <%= @user.average_rating %></p>
</section>
<section id="highest-review">
  <h2>Best Review</h2>
    <p><%= @user.highest_rating.rating %></p>
    <p><%= @user.highest_rating.title %></p>
    <p><%= @user.highest_rating.content %></p>
</section>
<section id="lowest-review">
    <h2>Worst Review</h2>
    <p><%= @user.lowest_rating.rating %></p>
    <p><%= @user.lowest_rating.title %></p>
    <p><%= @user.lowest_rating.content %></p>
</section>
